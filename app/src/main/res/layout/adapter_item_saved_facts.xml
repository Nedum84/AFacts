<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/savedItemWrapper">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">
        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:shape_roundRect_bottomLeftRadius="10dp"
            app:shape_roundRect_bottomRightRadius="10dp"
            app:shape_roundRect_topLeftRadius="10dp"
            app:shape_roundRect_topRightRadius="10dp"
            app:shape_roundRect_borderColor="@android:color/black"
            app:shape_roundRect_borderWidth="0dp">
            <ImageView
                android:id="@+id/savedItemImgBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a_item_bg3"
                tools:ignore="ContentDescription"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </com.github.florent37.shapeofview.shapes.RoundRectView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="12dp">
            <TextView
                android:id="@+id/savedItemUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinweike Collins"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/savedItemUserDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beyonye Chikwiki won 12 awards in 2020 and also "
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"
        android:layout_marginBottom="12dp"/>
</LinearLayout>