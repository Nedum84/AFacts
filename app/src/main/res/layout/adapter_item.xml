<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemWrapper">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_roundRect_bottomLeftRadius="10dp"
        app:shape_roundRect_bottomRightRadius="10dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp"
        app:shape_roundRect_borderColor="@android:color/black"
        app:shape_roundRect_borderWidth="0dp"
        >
        <ImageView
            android:id="@+id/itemImgBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/a_item_bg3"
            tools:ignore="ContentDescription"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>
    <TextView
        android:id="@+id/itmemUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinweike \nCollins"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>