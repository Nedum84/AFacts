<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragment.FragmentItemDetails">

    <ImageView
        android:id="@+id/detail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/a_main_bg2"
        tools:ignore="ContentDescription"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eminem Collected 16 grammy awards in 2012"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/user_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:text="Read more about this and other GRAMMYs news at GRAMMY.com. ... Home · Winners &amp; Nominees · Lifetime Achievement Award · Trustees Award · Technical GRAMMY Award · Music ... As the only peer-recognized music award, the GRAMMY is the music industry's ... How many GRAMMY Award categories are there?"
            />
        <Button
            android:id="@+id/save_fact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Fact"
            android:background="@drawable/design_border_radius_selected"
            android:textColor="@color/colorWhite"
            android:paddingStart="24dp"
            android:textStyle="normal"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:paddingEnd="24dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</LinearLayout>